{
  "name": "lines-app",
  "version": "1.0.0",
  "private": true,
  "packageManager": "pnpm@10.19.0",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "build:deploy": "prisma generate && prisma migrate deploy && next build",
    "start": "next start",
    "lint": "next lint",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:unit": "vitest --config vitest.config.unit.ts",
    "test:integration": "vitest --config vitest.config.integration.ts",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "postinstall": "dotenv -e .env.local -- prisma generate || prisma generate",
    "db:generate": "prisma generate",
    "db:push": "dotenv -e .env.local -- prisma db push",
    "db:migrate": "dotenv -e .env.local -- prisma migrate dev",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:seed": "dotenv -e .env.local -- tsx prisma/seed.ts",
    "db:test-user": "dotenv -e .env.local -- tsx scripts/create-test-user.ts",
    "db:e2e-venue": "dotenv -e .env.local -- tsx scripts/create-e2e-venue.ts",
    "db:test": "tsx scripts/test-db-connection.ts",
    "db:studio": "prisma studio",
    "db:make-admin": "dotenv -e .env.local -- tsx scripts/make-user-admin.ts"
  },
  "dependencies": {
    "@auth/prisma-adapter": "^2.11.1",
    "@prisma/client": "^6.1.0",
    "@radix-ui/react-accordion": "^1.2.12",
    "@radix-ui/react-avatar": "^1.1.11",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-collapsible": "^1.1.12",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-progress": "^1.1.8",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-toast": "^1.2.15",
    "@radix-ui/react-tooltip": "^1.2.8",
    "bcryptjs": "^3.0.3",
    "framer-motion": "^12.23.25",
    "html2canvas": "^1.4.1",
    "jspdf": "^3.0.4",
    "konva": "^10.0.12",
    "lucide-react": "^0.555.0",
    "next": "^15.1.0",
    "next-auth": "5.0.0-beta.30",
    "react": "19.2.1",
    "react-dnd": "^16.0.1",
    "react-dnd-html5-backend": "^16.0.1",
    "react-dom": "19.2.1",
    "react-konva": "^19.2.1",
    "zod": "^3.23.0",
    "zustand": "^5.0.9"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/bcryptjs": "^3.0.0",
    "@types/node": "^22.0.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@vitejs/plugin-react": "^4.0.0",
    "autoprefixer": "^10.4.22",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cross-env": "^10.1.0",
    "dotenv": "^17.2.3",
    "dotenv-cli": "^11.0.0",
    "eslint": "^9.0.0",
    "eslint-config-next": "^15.1.0",
    "playwright": "^1.57.0",
    "postcss": "^8.5.6",
    "prettier": "^3.3.0",
    "prisma": "^6.1.0",
    "supabase": "^2.65.6",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^3.4.18",
    "tailwindcss-animate": "^1.0.7",
    "tsx": "^4.21.0",
    "typescript": "^5.6.0",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^2.1.0"
  },
  "engines": {
    "node": "22.x"
  }
}
